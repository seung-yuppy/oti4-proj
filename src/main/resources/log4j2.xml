<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>
		<Console name="Out" target="SYSTEM_OUT">
			<PatternLayout charset="UTF-8"
				pattern="%-5level: %logger{1}.%M() - %msg%n" />
		</Console>

		<File name="AccessFile" fileName="c:/Temp/logs/access.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd hh:mm:ss} - %msg%n" />
		</File>

		<RollingFile name="SqlFile"
			fileName="c:/Temp/logs/sqlmybatis.log"
			filePattern="c:/Temp/logs/sqlmybatis-%d{yyyy-MM-dd-hh-mm}.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd hh:mm:ss} - %msg%n" />
			<Policies>
				<!-- interval은 가장 작은 단위의 1이 증가할 때마다 현재는 분 -->
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
			<DefaultRolloverStrategy max="7" />
		</RollingFile>

		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%p----%m%n" />
		</Console>

	</Appenders>

	<Loggers>
		<Logger name="jdbc.sqlonly" level="info" additivity="false">
			<AppenderRef ref="Out" />
			<AppenderRef ref="SqlFile" />
		</Logger>
		<Logger name="edu.example.springedu" level="info"
			additivity="false">
			<AppenderRef ref="Out" />
			<AppenderRef ref="AccessFile" />
		</Logger>
<!-- 		<Logger name="org.springframework" level="trace"
			additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger> -->
		<Root level="error">
			<AppenderRef ref="Out" />
		</Root>
	</Loggers>

</Configuration>